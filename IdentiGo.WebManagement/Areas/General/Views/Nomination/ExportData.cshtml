@model IdentiGo.WebManagement.Areas.General.Models.ExportDataViewModel
@using IdentiGo.Domain.Enums

@{
    ViewBag.Title = "Nombramientos";
}

@using (Html.BeginForm("ExportData"))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title">Nomabramientos</h4>

            <ol class="breadcrumb">
                <li><a href="">General</a></li>

                <li><a href="@Url.Action("Index")">Nombramientos</a></li>

                <li class="active">Exportar Información</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.TypeState)

                    @Html.EnumDropDownListFor(m => m.TypeState, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ExportDateStart)

                    @Html.TextBoxFor(m => m.ExportDateStart, "{0:yyyy-MM-dd}", new { @class = "form-control", required = "", type = "date" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ExportDateEnd)

                    @Html.TextBoxFor(m => m.ExportDateEnd, "{0:yyyy-MM-dd}", new { @class = "form-control", required = "", type = "date" })
                </div>

                <div class="form-group text-right m-b-0">
                    <button class="btn btn-primary waves-effect waves-light" type="submit">
                        Guardar
                    </button>

                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default waves-effect waves-light m-l-5" })
                </div>
            </div>
        </div>
    </div>
}
