@model IdentiGo.Transversal.Model.EditNomination
@{
    ViewBag.Title = "Reporte Gerente de Zona";
}

@using (Html.BeginForm("Edit"))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title">Nombramientos</h4>
            <ol class="breadcrumb">
                <li><a href="">General</a></li>
                <li><a href="@Url.Action("IndexCandidate", new { Code = Model.CodeId, type = Model.TypeConsulManagerZone, campaing = Model.CodeCampaing })">Nombramientos</a></li>
                <li class="active">Eliminar Nombramiento</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                <a data-toggle="tooltip" title="Regresar" href="@Url.Action("IndexCandidate", new { codeId = Model.CodeId, type = Model.TypeConsulManagerZone, campaing = Model.CodeCampaing })" class="pull-right btn btn-sm btn-icon waves-effect btn-default waves-light"> <i class="fa fa-arrow-left"></i> </a>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <p class="text-muted m-b-30 font-13">
                    Esta seguro que desea eliminar este registro?
                </p>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Nomination.Document)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Nomination.Document)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Nomination.CodeVerification)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Nomination.CodeVerification)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Nomination.Name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Nomination.Name)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Nomination.LastName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Nomination.LastName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Nomination.PhoneNumber)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Nomination.PhoneNumber)
                    </dd>
                </dl>
            </div>
            <div class="card-box">
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(model => model.Nomination.Id)
                    @Html.HiddenFor(model => model.CodeId)
                    @Html.HiddenFor(model => model.TypeConsulManagerZone)
                    @Html.HiddenFor(model => model.CodeCampaing)
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color">
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                        @Html.ActionLink("Cancelar", "IndexCandidate", new { codeId = Model.CodeId, type = Model.TypeConsulManagerZone, campaing = Model.CodeCampaing }, new { @class = "btn btn-default waves-effect waves-light m-l-5" })
                    </div>
                }
            </div>
        </div>
    </div>
}
