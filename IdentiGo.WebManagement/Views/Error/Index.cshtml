@model IdentiGo.Transversal.Error.MvcErrorModel
@{
    ViewBag.Title = "Error";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card-box">
            <div class="alert alert-danger">
                @if (Model.ErrorInfo == null || Model.ErrorInfo.Exception.Message == null)
                {
                    <h4><i class="icon fa fa-ban"></i> @Model.ErrorTitle! </h4>
                }
                else
                {
                    <h4><i class="icon fa fa-ban"></i> @Model.ErrorInfo.Exception.Message </h4>
                }
            </div>

            @if (!Model.IsAjaxRequest)
            {
                <div class="form-group text-right m-b-0">

                    <a class="btn btn-default waves-effect waves-light m-l-5" href="@Request.UrlReferrer">
                        Volver...
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
        });
    </script>
}