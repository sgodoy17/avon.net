@model IdentiGo.Domain.Security.GroupRole

@{
    ViewBag.Title = "Roles";
}

@using (Html.BeginForm("Edit"))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title">Roles</h4>
            <ol class="breadcrumb">
                <li><a href="">Administración</a></li>
                <li><a href="@Url.Action("Index")">Roles</a></li>
                <li class="active">Editar</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "" })
                </div>
                <div class="row">
                    <div class="col-sm-12">

                        <div class="card-box table-responsive">
                            @Html.Label("Permisos")
                            <table id="datatable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th width="50">
                                        </th>
                                        <th>
                                            Permiso
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.RoleList)
                                    {
                                        <tr>
                                            <td>
                                                <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                                            </td>
                                            <td>
                                                @Html.Label(item.Text, new { @class = "control-label" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <div class="form-group text-right m-b-0">
                    <button class="btn btn-primary waves-effect waves-light" type="submit">
                        Guardar
                    </button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default waves-effect waves-light m-l-5" })
                </div>
            </div>
        </div>
    </div>
}
