<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Avon | @ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
        .navbar-principal {
            padding-bottom: 50px;
        }

            .navbar-principal .navbar-brand {
                height: 100%;
            }

            .navbar-principal .nav > li > a {
                padding-top: 30px;
                padding-bottom: 30px;
            }
    </style>
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="navbar-principal">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a class="pull-left" href="@Url.Action("Index", "Home", new { area = string.Empty })">
                    <img id="home-logo-company" height="80" src="~/img/Avon-2015-logo.png" alt="Dispute Bills">
                    </a>
                </div>
                <div id="navbar3" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, null)</li>
                        @*<li><a href="#">About</a></li>*@
                        @*<li><a href="#">Contact</a></li>*@
                        @if (!string.IsNullOrWhiteSpace(User.Identity.Name))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@User.Identity.Name <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">Editar Información</a></li>
                                    <li><a href="#">Cambio de Contraseña</a></li>
                                    @*<li><a href="#">Something else here</a></li>*@
                                    <li class="divider"></li>
                                    @*<li class="dropdown-header">Cerrar Sesión</li>*@
                                    <li>@Html.ActionLink("Cerrar Sesión", "LogOff", "Account", new { area = "" }, new { })</li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>
    @{
        Html.RenderPartial("~/Views/Shared/Theme/_ErrorModal.cshtml");
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
        $(document)
            .ajaxError(function (e, jqxhr, settings, exception) {
                e.stopPropagation();
                if (jqxhr != null) {
                    if ($("#modal-error") != null) {
                        $("#modal-error-text").html(JSON.parse(jqxhr.responseText).Message);
                        $("#modal-error").modal("show");
                    } else {
                        alert(jqxhr.responseText);
                    }
                }
            });
        $(document).ready(function () {
            var navbarbackgroundColor = '@Component.Transversal.Utilities.CurrentUserUtils.CurrentEnterprise.Color';
            var navbarimg = '@Component.Transversal.Utilities.CurrentUserUtils.CurrentEnterprise.Image';
            if (navbarbackgroundColor.length > 0) {
                $('.navbar-inverse')[0].style.backgroundColor = navbarbackgroundColor;
            }
            if (navbarimg.length > 0) {
                $('#home-logo-company').attr("src", navbarimg);
            }
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
