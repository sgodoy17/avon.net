@model IdentiGo.WebManagement.Models.ChangePasswordViewModels
@{
    ViewBag.Title = "Cambiar Contraseña";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title">Cambiar Contraseña</h4>
            <ol class="breadcrumb">
                <li><a href="">Administración</a></li>
                <li><a href="@Url.Action("Index")">Usuarios</a></li>
                <li class="active">Cambiar Contraseña</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(x => x.UserId)
                <div class="form-group">
                    @Html.LabelFor(model => model.Password)
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", required = "" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ConfirmPassword)
                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", required = "" })
                </div>
                <div class="form-group text-right m-b-0">
                    <button class="btn btn-primary waves-effect waves-light" type="submit">
                        Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
}
