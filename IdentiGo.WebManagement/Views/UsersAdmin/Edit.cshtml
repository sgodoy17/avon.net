@model IdentiGo.Domain.Security.User
@{
    ViewBag.Title = "Usuarios";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title">Usuarios</h4>
            <ol class="breadcrumb">
                <li><a href="">Administración</a></li>
                <li><a href="@Url.Action("Index")">Usuarios</a></li>
                <li class="active">Editar</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                <div class="form-horizontal">
                    <div class="ln_solid"></div>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="row">
                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.Name1, htmlAttributes: new { @class = "col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Name1, new { htmlAttributes = new { @class = "form-control" } })
                                @*@Html.ValidationMessageFor(model => model.LastName1, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.Name2, htmlAttributes: new { @class = "col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Name2, new { htmlAttributes = new { @class = "form-control" } })
                                @*@Html.ValidationMessageFor(model => model.LastName2, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.LastName1, htmlAttributes: new { @class = "col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.LastName1, new { htmlAttributes = new { @class = "form-control" } })
                                @*@Html.ValidationMessageFor(model => model.LastLastName1, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.LastName2, htmlAttributes: new { @class = "col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.LastName2, new { htmlAttributes = new { @class = "form-control" } })
                                @*@Html.ValidationMessageFor(model => model.LastLastName2, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.IdType, htmlAttributes: new { @class = "col-md-12" })
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.IdType, (SelectList)ViewBag.IdentificationTypeList, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.IdNumber, htmlAttributes: new { @class = "col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.IdNumber, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group  col-md-3">
                            @Html.LabelFor(model => model.Birthdate, htmlAttributes: new { @class = "col-md-12" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Birthdate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                            </div>
                        </div>

                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.Address1, htmlAttributes: new { @class = "col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Address1, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @*@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "col-md-12" })
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.Gender, (SelectList)ViewBag.GenderList, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.CodeVerification, htmlAttributes: new { @class = "col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.CodeVerification, new { htmlAttributes = new { @class = "form-control", required = "" } })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="card-box table-responsive">
                                @Html.Label("Roles")
                                <table id="datatable" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th width="50">
                                            </th>
                                            <th>
                                                Rol
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.RolesList)
                                        {
                                            <tr>
                                                <td>
                                                    <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                                                </td>
                                                <td>
                                                    @Html.Label(item.Text, new { @class = "control-label" })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group text-right m-b-0">
                        <button class="btn btn-primary waves-effect waves-light" type="submit">
                            Guardar
                        </button>
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default waves-effect waves-light m-l-5" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}