@model IdentiGo.Domain.Entity.General.Config
@{
    ViewBag.Title = "Configuraciones del Sistema";
}

@using (Html.BeginForm("Edit"))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title">Configuraciones del Sistema</h4>
            <ol class="breadcrumb">
                <li><a href="">Maestros</a></li>
                <li class="active"><a href="@Url.Action("Edit")">Configuraciones del Sistema</a></li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    @Html.LabelFor(model => model.UserCIFIN)
                    @Html.TextBoxFor(m => m.UserCIFIN, new { @class = "form-control", required = "" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PasswordCIFIN)
                    @Html.PasswordFor(m => m.PasswordCIFIN, new { @class = "form-control", required = "" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.EmailTo)
                    <div class="tags-default">
                        @Html.TextBoxFor(m => m.EmailTo, new { @class = "form-control", required = "", data_role = "tagsinput" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Subject)
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", required = "" })
                </div>
                <div class="form-group text-right m-b-0">
                    <button class="btn btn-primary waves-effect waves-light" type="submit">
                        Guardar
                    </button>
                    @Html.ActionLink("Cancelar", "Index", "Home", new { area = "" }, new { @class = "btn btn-default waves-effect waves-light m-l-5" })
                </div>
            </div>
        </div>
    </div>
}
