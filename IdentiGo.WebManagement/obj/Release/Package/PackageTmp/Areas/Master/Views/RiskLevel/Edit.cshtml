@model IdentiGo.Domain.Entity.Master.RiskLevel
@{
    ViewBag.Title = "Niveles de Riesgo";
}

@using (Html.BeginForm("Edit"))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title">Niveles de Riesgo</h4>
            <ol class="breadcrumb">
                <li><a href="">Maestros</a></li>
                <li><a href="@Url.Action("Index")">Niveles de Riesgo</a></li>
                <li class="active">Editar</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Level)
                    @Html.TextBoxFor(m => m.Level, new { @class = "form-control", required = "" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Description)
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", required = "" })
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            @Html.Label("Cupos")
                            <table id="datatable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th width="50">
                                        </th>

                                        <th>
                                            Monto
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.QuotaList)
                                    {
                                        <tr>
                                            <td>
                                                <input type="checkbox" name="SelectedQuota" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                                            </td>

                                            <td>
                                                @Html.Label(item.Text, new { @class = "control-label" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>

                <div class="form-group text-right m-b-0">
                    <button class="btn btn-primary waves-effect waves-light" type="submit">
                        Guardar
                    </button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default waves-effect waves-light m-l-5" })
                </div>
            </div>
        </div>
    </div>
}
