@model IdentiGo.WebManagement.Areas.Report.Models.NominationHistoricModel
@{
    ViewBag.Title = "Historico de Codigos de Verificación";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title">Nombramientos</h4>

        <ol class="breadcrumb">
            <li><a href="">Reporte</a></li>

            <li><a href="@Url.Action("Index")">Historico</a></li>

            <li class="active">Detalle</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">            
            <h4 class="m-t-0 header-title"><b>Registros</b></h4>

            <div class="card-box">
                <p class="text-muted m-b-30 font-13">
                    Información Basica nombramiento
                </p>

                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.HictoricNomination.FirstOrDefault().Nomination.CodeUser)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.HictoricNomination.FirstOrDefault().Nomination.CodeUser)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.HictoricNomination.FirstOrDefault().Nomination.Document)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.HictoricNomination.FirstOrDefault().Nomination.Document)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.HictoricNomination.FirstOrDefault().Nomination.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.HictoricNomination.FirstOrDefault().Nomination.Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.HictoricNomination.FirstOrDefault().Nomination.LastName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.HictoricNomination.FirstOrDefault().Nomination.LastName)
                    </dd>
                </dl>
            </div>

            <table id="datatable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.HictoricNomination.FirstOrDefault().ZoneId)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.HictoricNomination.FirstOrDefault().UnitId)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.HictoricNomination.FirstOrDefault().CodeUser)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.HictoricNomination.FirstOrDefault().PhoneAnswer)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.HictoricNomination.FirstOrDefault().PhoneNumber)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.HictoricNomination.FirstOrDefault().DateCreated)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.HictoricNomination.FirstOrDefault().Date)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.HictoricNomination.FirstOrDefault().CodeVerification)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.HictoricNomination.FirstOrDefault().StageProcess)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.HictoricNomination.FirstOrDefault().State)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.HictoricNomination.FirstOrDefault().StateDocument)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.HictoricNomination)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Zone.DisplayValue)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Unit.NumberCodeName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.CodeUser)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneAnswer)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.CodeVerification)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.StageProcess)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.StateDocument)
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
