@model IdentiGo.Transversal.Model.CandidateReport
@{
    ViewBag.Title = "Reporte Gerente de Zona";
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form-validation", @class = "form-horizontal" }))
{
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title">Nombramientos Gerente de Zona</h4>

            <ol class="breadcrumb">
                <li><a href="">Reportes</a></li>

                <li><a href="@Url.Action("Index")">Nombramientos</a></li>

                <li class="active">Nombramientos Por Candidata</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <div class="container col-md-12">
                    <div class="form-group">
                        <div class="btn-group pull-right">
                            <a data-toggle="tooltip" title="Regresar" href="@Url.Action("IndexZone", new { zoneId = Model.ZoneId, campaingId = Model.CampaingId, dateStart = Model.DateStart, dateEnd = Model.DateEnd, typeConsult = Model.TypeConsulManagerZone })" class="btn btn-sm btn-icon waves-effect btn-default waves-light" id="btn-back"> <i class="fa fa-arrow-left"></i> </a>
                        </div>                        

                        <h4 class="m-t-0 header-title col-md-10"><b>Responsable: @Html.DisplayFor(model => model.Name)</b></h4>
                    </div>
                    

                    @Html.HiddenFor(model => model.UnitId)

                    @Html.HiddenFor(model => model.ZoneId)

                    <div class="form-group">
                        @Html.Label("Número de Campaña", new { @class = "col-md-2 control-label" })

                        <div class="col-md-9">
                            @Html.DropDownListFor(m => m.CampaingId, (SelectList)ViewBag.CampaingList, "Todos", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DateYear, new { @class = "col-md-2 control-label" })

                        <div class="col-md-9">
                            @Html.DropDownListFor(m => m.DateYear, (IEnumerable<SelectListItem>)ViewBag.Years, "Seleccione un año", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DateStart, new { @class = "col-md-2 control-label" })

                        <div class="col-md-9 dateContainer">
                            <div class="input-group input-append date" id="startDatePicker">
                                @Html.TextBoxFor(m => m.DateStart, "{0:yyyy/MM/dd}", new { @Value = Model.DateStart.Value.ToString("yyyy/MM/dd"), @class = "form-control", @placeholder = "Fecha Inicio" })

                                <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DateEnd, new { @class = "col-md-2 control-label" })

                        <div class="col-md-9 dateContainer">
                            <div class="input-group input-append date" id="endDatePicker">
                                @Html.TextBoxFor(m => m.DateEnd, "{0:yyyy-MM-dd}", new { @Value = Model.DateEnd.Value.ToString("yyyy/MM/dd"), @class = "form-control", @placeholder = "Fecha Fin" })

                                <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
                            </div>
                        </div>
                    </div>

                    <div class="btn-toolbar mb-3">
                        <div class="btn-group pull-right">
                            <button class="btn btn-primary external waves-effect waves-light" type="submit">
                                Consultar
                            </button>
                        </div>
                    </div>
                </div>

                <div class="row col-md-12">
                    <div class="col-md-6">
                        <div class="card-box">
                            <h4 class="m-t-0 m-b-30 header-title"><b>Número de Nombramientos</b></h4>

                            <div id="TotalPie"></div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card-box">
                            <h4 class="m-t-0 m-b-30 header-title"><b>Consolidado de Estados</b></h4>
                            <div id="StatePie"></div>
                        </div>
                    </div>
                </div>

                <h4 class="m-t-0 header-title"><b>Registros</b></h4>

                <table id="datatable-buttons" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Zona
                            </th>

                            <th>
                                Código de Empresaria
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.ListNomination.FirstOrDefault().Document)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.ListNomination.FirstOrDefault().Name)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.ListNomination.FirstOrDefault().LastName)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.ListNomination.FirstOrDefault().StageProcess)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.ListNomination.FirstOrDefault().State)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.ListNomination.FirstOrDefault().StateDocument)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.ListNomination.FirstOrDefault().DateCreated)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.ListNomination.FirstOrDefault().DateNomination)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.ListNomination.FirstOrDefault().TypeProcess)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.ListNomination.FirstOrDefault().CodeVerification)
                            </th>

                            <th width="120">
                                Acciones
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.ListNomination)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Zone.DisplayValue)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CodeUser)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Document)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.StageProcess)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.StateDocument)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DateNomination)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.TypeProcess)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CodeVerification)
                    </td>

                    <td class="actions">
                        <a href="@Url.Action("EditCandidate", new { id = item.Id, codeId = Model.UnitId, type = Model.TypeConsulManagerZone, campaingId = Model.CampaingId })" class="on-default edit-row"><i class="fa fa-pencil"></i></a>

                        @if (item.NominationHistoric.Count() != 0)
            {
                <a href="@Url.Action("HistoricNomination", new { id = item.Id })" class="on-default"><i class="fa fa-align-justify"></i></a>
}

                        <a href="@Url.Action("DeleteCandidate", new { id = item.Id, codeId = Model.UnitId, type = Model.TypeConsulManagerZone, campaingId = Model.CampaingId })" class="on-default" style="color:red"><i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>
}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@section scripts
{
    <script>
        $(document).ready(function () {
            TableManageButtons.init();
        });
        var handleDataTableButtons = function () {
            "use strict";
            0 !== $("#datatable-buttons").length && $("#datatable-buttons").DataTable({
                "oLanguage": {
                    "sProcessing": "Procesando...",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún dato disponible en esta tabla",
                    "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                    "oAria": {
                        "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                        "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                    },
                },
                "order": [[8, "desc"]],
                dom: "Bfrtip",
                buttons: [{
                    extend: "copy",
                    text: 'Copiar',
                    className: "btn-sm",
                    exportOptions: {
                        modifier: {
                            page: 'current'
                        }
                    }
                }, {
                    extend: "csv",
                    className: "btn-sm",
                    exportOptions: {
                        modifier: {
                            page: 'current'
                        }
                    }
                }, {
                    extend: "excel",
                    className: "btn-sm",
                    exportOptions: {
                        modifier: {
                            page: 'current'
                        }
                    }
                }, {
                    extend: "pdf",
                    className: "btn-sm",
                    orientation: 'landscape',
                    pageSize: 'TABLOID',
                    exportOptions: {
                        modifier: {
                            page: 'current'
                        }
                    }
                }, {
                    extend: "print",
                    text: 'Imprimir',
                    className: "btn-sm",
                    exportOptions: {
                        modifier: {
                            page: 'current'
                        }
                    }
                }],
                responsive: !0,
            })
        },
            TableManageButtons = function () {
                "use strict";
                return {
                    init: function () {
                        handleDataTableButtons()
                    }
                }
            }();
        c3.generate({
            bindto: '#TotalPie',
            data: {
                columns: [
                    ['Total ', @Model.Total],
                ],
                type: 'pie',
                width: '165',
                height: '165',
            },
            color: {
                pattern: ["#5fbeaa"]
            },
            pie: {
                label: {
                    show: true,
                    format: function (value, ratio, id) {
                        return d3.format('')(value);
                    }
                }
            }
        });
        c3.generate({
            bindto: '#StatePie',
            data: {
                columns: [
                    ['Pendientes ', @Model.Pending],
                    ['Incumplen ', @Model.Invalid],
                    ['Aprobados ', @Model.Success]
                ],
                type: 'pie',
                width: '165',
                height: '165',
            },
            color: {
                pattern: ["#D9914C", "#D9594C", "#7AB6C2"]
            },
            pie: {
                label: {
                    show: true,
                    format: function (value, ratio, id) {
                        return d3.format('')(value);
                    }
                }
            }
        });
    </script>
}