@model IdentiGo.Transversal.Model.AdminReportModel
@{
    ViewBag.Title = "Reporte Administrador";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title">Nombramientos</h4>

            <ol class="breadcrumb">
                <li><a href="">Reportes</a></li>

                <li class="active"><a href="@Url.Action("Index")">Nombramientos</a></li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <a data-toggle="tooltip" title="Regresar" href="@Url.Action("Index")" class="pull-right btn btn-sm btn-icon waves-effect btn-default waves-light"> <i class="fa fa-arrow-left"></i> </a>

                <h4 class="m-t-0 header-title"><b></b></h4>

                <div class="form-group">
                    @Html.LabelFor(model => model.ZoneId)

                    @Html.DropDownListFor(m => m.ZoneId, (SelectList)ViewBag.ZoneList, "Todas", new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TypeConsulAdmin)

                    @Html.EnumDropDownListFor(m => m.TypeConsulAdmin, "-- Seleccione el Tipo --", new { @class = "form-control", required = "" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CampaingId)

                    @Html.DropDownListFor(m => m.CampaingId, (SelectList)ViewBag.CampaingList, "Todos", new { @class = "form-control" })
                </div>

                <div class="form-group text-right m-b-0">
                    <button class="btn btn-primary waves-effect waves-light" type="submit">
                        Consultar
                    </button>
                </div>

                @if (Model.Init)
                {
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card-box">
                                <h4 class="m-t-0 m-b-30 header-title"><b>Número de Nombramientos</b></h4>

                                <div id="TotalPie"></div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card-box">
                                <h4 class="m-t-0 m-b-30 header-title"><b>Consolidado de Estados</b></h4>

                                <div id="StatePie"></div>
                            </div>
                        </div>
                    </div>

                    <h4 class="m-t-0 header-title"><b>Registros</b></h4>

                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ListIimpresario.FirstOrDefault().Code)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.ListIimpresario.FirstOrDefault().Pending)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.ListIimpresario.FirstOrDefault().Invalid)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.ListIimpresario.FirstOrDefault().Success)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.ListIimpresario.FirstOrDefault().Total)
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.ListIimpresario)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("IndexCandidate", new { codeId = item.CodeId, type = Model.TypeConsulAdmin, campaingId = Model.CampaingId, dateStart = Model.DateStart, dateEnd = Model.DateEnd, year = Model.DateYear })">@Html.DisplayFor(modelItem => item.Code)</a>
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pending)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Invalid)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Success)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Total)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
}

@section scripts
{
    <script>
        c3.generate({
            bindto: '#TotalPie',
            data: {
                columns: [
                    ['Total ', @Model.Total],
                ],
                type: 'pie',
                width: '165',
                height: '165',
            },
            color: {
                pattern: ["#5fbeaa"]
            },
            pie: {
                label: {
                    show: true,
                    format: function (value, ratio, id) {
                        return d3.format('')(value);
                    }
                }
            }
        });
        c3.generate({
            bindto: '#StatePie',
            data: {
                columns: [
                    ['Pendientes ', @Model.Pending],
                    ['Incumplen ', @Model.Invalid],
                    ['Aprobados ', @Model.Success]
                ],
                type: 'pie',
                width: '165',
                height: '165',
            },
            color: {
                pattern: ["#D9914C", "#D9594C", "#7AB6C2"]
            },
            pie: {
                label: {
                    show: true,
                    format: function (value, ratio, id) {
                        return d3.format('')(value);
                    }
                }
            }
        });
    </script>
}