@model IdentiGo.WebManagement.Models.ChangePasswordViewModels
@{
    ViewBag.Title = "Cambiar Contraseña";
}

@using (Html.BeginForm("ChangeFirstPassword"))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title">Cambiar Contraseña</h4>
            <ol class="breadcrumb"></ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.Hidden("Init", false)
                @Html.HiddenFor(model => model.UserName)
                @Html.HiddenFor(model => model.RememberMe)
                <div class="form-group">
                    @Html.LabelFor(model => model.OldPassword)
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", required = "" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", required = "" })
                </div>
                <div class="form-group text-right m-b-0">
                    <button class="btn btn-primary waves-effect waves-light" type="submit">
                        Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
}
