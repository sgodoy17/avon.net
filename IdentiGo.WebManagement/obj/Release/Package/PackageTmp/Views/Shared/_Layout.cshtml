                            format: 'YYYY/MM/DD',
                            min: 'DateStart',
                            message: 'La fecha fin no es valida'
                        }
                    }
                },
                'DateYear': {
                    validators: {
                        notEmpty: {
                            message: 'El año es requerido'
                        }
                    }
                }
            }
        })
            .on('success.field.fv', function (e, data) {
                if (data.field === 'DateStart' && !data.fv.isValidField('DateEnd')) {
                    data.fv.revalidateField('DateEnd');
                }

                if (data.field === 'DateEnd' && !data.fv.isValidField('DateStart')) {
                    data.fv.revalidateField('DateStart');
                }

                if (data.field === 'DateYear' && !data.fv.isValidField('DateStart')) {
                    if ($('.form-group').find('.form-control-feedback[data-fv-icon-for="DateStart"]').hasClass('glyphicon-remove')) {
                        data.fv.resetField('DateStart');
                        data.fv.resetField('DateEnd');
                    }
                }

                if (data.field === 'DateStart' && !data.fv.isValidField('DateYear')) {
                    if ($('.form-group').find('.form-control-feedback[data-fv-icon-for="DateYear"]').hasClass('glyphicon-remove')) {
                        data.fv.resetField('DateYear');
                        $('#form-validation').data('formValidation').disableSubmitButtons(true);
                    }
                }

                if (data.field === 'DateEnd' && !data.fv.isValidField('DateYear')) {
                    if ($('.form-group').find('.form-control-feedback[data-fv-icon-for="DateYear"]').hasClass('glyphicon-remove')) {
                        data.fv.resetField('DateYear');
                        $('#form-validation').data('formValidation').disableSubmitButtons(true);
                    }
                }            
            })
            .on('click', 'button[data-toggle]', function () {
                var $target = $($(this).attr('data-toggle'));
                $target.toggle();

                if (!$target.is(':visible')) {
                    $('#form-validation').data('formValidation').disableSubmitButtons(false);
                }
            });

        $('#DateYear').change(function () {
            if ($('#DateYear').val() == "") {
                $('#DateStart').removeAttr('disabled');
                $('#DateStart').attr('required', 'true').val('');
                $('#DateEnd').removeAttr('disabled');
                $('#DateEnd').attr('required', 'true').val('');
            } else {
                $('#DateStart').attr('disabled', 'disabled').val('');
                $('#DateStart').removeAttr('required');
                $('#DateEnd').attr('disabled', 'disabled').val('');
                $('#DateEnd').removeAttr('required');
            }
        });

        $('#DateStart').change(function () {
            $('#DateYear').removeAttr('required');
            $('#DateYear').attr('disabled', 'disabled').val('');
        });

        $('#DateEnd').change(function () {
            $('#DateYear').removeAttr('required');
            $('#DateYear').attr('disabled', 'disabled').val('');
        });

        if ($('#DateStart').val() != "" && $('#DateEnd').val() != "" && $('#DateYear').val() != "") {
            $('#DateStart').attr('disabled', 'disabled').val('');
            $('#DateStart').removeAttr('required');
            $('#DateEnd').attr('disabled', 'disabled').val('');
            $('#DateEnd').removeAttr('required');
        }

        if ($('#DateStart').val() != "" && $('#DateEnd').val() != "" && $('#DateYear').val() == "") {
            $('#DateYear').removeAttr('required');
            $('#DateYear').attr('disabled', 'disabled').val('');
        }
    </script>
